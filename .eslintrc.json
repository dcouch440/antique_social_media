{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "node/no-process-env":["off", "always"],
        "semi": "error",
        "semi-spacing": "error",
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "no-multiple-empty-lines": "error",
        "no-unused-vars": "error",
        "keyword-spacing": "error",
        "no-multi-spaces": "error",
        "space-before-function-paren": "error",
        "eqeqeq": "error",
        "curly": "error",
        "block-spacing": "error"
    }
}
